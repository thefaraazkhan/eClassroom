<%- include('partials/header')%>
<%- include('partials/nav')%>

<div class="container mt-4 d-flex justify-content-center ">

  <div class="card col col-lg-6">
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <h1><%= assignment.title %></h1>
      </li>
      <li class="list-group-item">
        <strong>Details:</strong> <%= assignment.details %>
      </li>
      <li class="list-group-item">
        <strong>Reference:</strong> <a href="https://<%= assignment.fileURL %>" target="_blank"><%= fileName %></a>
      </li>
      <li class="list-group-item">
        <strong>Due Date:</strong> <%=  formatDate(assignment.dueDate) %>
      </li>
      <li class="list-group-item">
        <strong>Marks:</strong> <%= assignment.marks %>
      </li>
  </div>
</div>

<%- include('partials/footer')%>